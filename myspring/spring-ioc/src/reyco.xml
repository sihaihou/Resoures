<?xml version="1.0" encoding="UTF-8"?>
<beans>

	<bean  id="grade" class="com.reyco.annotation.entity.Grade">
		<property name="no" value="001"/>
		<property name="name" value="高三四班"/>
	</bean>
	
	<bean id="student" class="com.reyco.annotation.entity.Student">
		<property name="id" value="1"/>
